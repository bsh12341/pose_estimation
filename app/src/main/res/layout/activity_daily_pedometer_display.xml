<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Button
        android:id="@+id/startEditTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="시작시간"
        android:importantForAutofill="no"
        android:inputType="date"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/listview"
        app:layout_constraintEnd_toStartOf="@id/endEditTextDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/endEditTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="종료시간"
        android:importantForAutofill="no"
        android:inputType="date"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/listview"
        app:layout_constraintEnd_toStartOf="@id/pedeometerSearchBtn"
        app:layout_constraintLeft_toRightOf="@+id/startEditTextDate"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startEditTextDate"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/pedeometerSearchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@android:drawable/ic_menu_search"
        app:layout_constraintBottom_toTopOf="@id/listview"

        app:layout_constraintLeft_toRightOf="@id/endEditTextDate"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

