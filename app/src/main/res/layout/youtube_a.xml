<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <kr.co.prnd.YouTubePlayerView
        android:id="@+id/you_tube_player_viewarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/videodiscriptionarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:videoId="vHmeUkbYsSo" />

    <TextView
        android:id="@+id/videodiscriptionarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아령 들기 운동은 팔을 직각으로 두고 시작해서 어깨까지 올리는 운동입니다."
        app:layout_constraintTop_toBottomOf="@id/you_tube_player_viewarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>